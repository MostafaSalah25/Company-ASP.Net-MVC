@model Department 
@{
    ViewData["Title"] = "Details";
}

<h1>Are You Sure To Delete This Department?</h1>

<form asp-action="Delete">
    <div class="form-group">
        <input hidden asp-for="Id" />
        <label asp-for="Code" class="col-form-label"></label>
        <input class="form-control" asp-for="Code" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input class="form-control" asp-for="Name" readonly />
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation" class="col-form-label"></label>
        <input class="form-control" asp-for="DateOfCreation" readonly />
    </div>

    <div>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Back To List</a>
    </div>
</form>


