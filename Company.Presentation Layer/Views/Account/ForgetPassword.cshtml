@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthentLayout.cshtml";
}


<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="ForgetPassword">
            <div asp-validation-summary="All" class="text-danger"></div>
            <p>Enter Your Email address that you used to register and we will send you an email with your username and a link to reset your password</p>
            <input class="text email" type="email" asp-for="Email" placeholder="Email" required="" />

            <input type="submit" value="Send Email">

            <input asp-action="Login" type="submit" value="LOGIN">
        </form>
    </div>
</div>


